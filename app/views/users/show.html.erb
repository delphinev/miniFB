<h1><%= @user.name %></h1>
<h2><%= @user.name %> 's friends </h2>
<ul>
  <% @user.friends.each do |friend| %>
    <li><%= friend.name %></li>
  <% end %>
</ul>
<h2>Write something</h2>
<%= form_tag "/users/#{@user.id}", method: "post" do %>
  <textarea name="content" row="5"></textarea>
  <input type="submit" value="Submit"/>
<% end %>

<h3><%= @user.name%> 's wall</h3>
<% @posts.each do |post| %>
  <div>
    <h4><%= post.user.name %> said: </h4>
    <p> <%= post.content %></p>
  </div>
<% end %>
